  <PropertyGroup>
    <DocumentationFile>Diamond.Core.Extensions.Hosting.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Diamond.Core.Extensions.Hosting.xml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
